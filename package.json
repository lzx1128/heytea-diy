{
    "name": "heytea-diy",
    "version": "1.0.0",
    "description": "Simple backend for heytea-pic-upload (file upload + static serve)",
    "main": "index.js",
    "bin": "index.js",
    "scripts": {
        "start": "node index.js"
    },
    "pkg": {
        "assets": [
            "public/**/*",
            "node_modules/axios/**/*"
        ],
        "targets": [
            "node18-linux-x64",
            "node18-macos-x64",
            "node18-win-x64"
        ],
        "mountpoints": [
            "uploads"
        ]
    },
    "dependencies": {
        "axios": "^1.13.2",
        "cors": "^2.8.5",
        "express": "^4.18.2",
        "multer": "^1.4.5-lts.1"
    }
}
